<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_yinliao"
        android:padding="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="商品名称"
            android:textStyle="bold"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/icon_line" />

        <TextView
            android:id="@+id/tv_alert_goodname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="-"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="商品分类"
            android:textStyle="bold"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/icon_line" />

        <TextView
            android:id="@+id/tv_alert_goodstype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="-"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="商品售价"
            android:textStyle="bold"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/icon_line" />

        <TextView
            android:id="@+id/tv_alert_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="-"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
     <RadioGroup
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">

         <RadioButton
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:text="正常冰"
             android:id="@+id/rb_good_ice_full"
             />
         <RadioButton
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:text="去冰"
             android:id="@+id/rb_good_ice_none"
             />
         <RadioButton
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:text="常温"
             android:id="@+id/rb_good_ice_normal"
             />
         <RadioButton
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:text="加热"
             android:id="@+id/rb_good_ice_heat"
             />

      </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="全糖"
                android:layout_marginStart="24dp"
                android:id="@+id/rb_good_sugar_full"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="半糖"
                android:id="@+id/rb_good_sugar_mid"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="无糖"
                android:id="@+id/rb_good_none"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >
            <CheckBox
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="珍珠"
                android:layout_marginLeft="120dp"
                android:id="@+id/rb_good_pearl"
                android:layout_marginStart="80dp"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="椰果"
                android:id="@+id/rb_good_coconuts"
                />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_alert_sub"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@mipmap/icon_count2"
            android:gravity="center">

        </ImageView>

        <EditText
            android:id="@+id/et_alert_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="0"
            android:textSize="14sp">

        </EditText>

        <ImageView
            android:id="@+id/iv_alert_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@mipmap/icon_add2"
            android:gravity="center">

        </ImageView>
    </LinearLayout>

</LinearLayout>
